                        //-     div(class="form-group").col-sm-2
                        //-         input(type="text" id="phone" class="form-control" placeholder="543" maxlength="3" name="phoneNumber2" required value="")
                            
                        //-     div(class="form-group").col-sm-7
                        //-         input(type="text" id="phone" class="form-control" placeholder="9876543" maxlength="7" name="phoneNumber3" required value="")

                        .row
                            label(for="password").col-sm-2 Parola:
                            div(class="form-group").col-sm-10
                                input(type="password" id="password" class="form-control" placeholder="Hesap güvenliği için güçlü bir parola seçiniz" name="password" required value="")
                            
                        .row
                            div(class="form-group").col-sm-1
                                input(type="checkbox",id="" class="form-control agreement-button" required)
                            div(class="form-group").col-sm-11
                                | Kayıt Ol'a basarak 
                                a(href="#") Üyelik Koşulları 
                                |'nı ve  
                                a(href="#") Kişisel Verilerin Korunması Metni 
                                |'ni kabul ediyorum



                input(type="submit" class="btnSubmit" value="Kayıt Ol")

