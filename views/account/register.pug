extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/register.css")
block megaMenu 
    include ../includes/menu.pug
block content
    if errorMessage
        div.alert.alert-danger.col-sm-7.container !{errorMessage}

    div(class="container register-form").mt-5
        form(action="/register" method="POST" autocomplete="off")
            input(type="hidden" name="_csrf" value=`${csrfToken}`)
            div(class="form-content")
                div(class="row")
                    
                    div(class="col-md-12")
                        h2.text-success
                          b Üye Ol 
                        hr
                        br
                        
                        .row
                            label(for="name").col-sm-2 Adınız:
                            div(class="form-group").col-sm-10
                                input(type="text" id="name" class="form-control" placeholder="Lütfen adınızı giriniz" name="name" required autofocus)

                        .row
                            label(for="surname").col-sm-2 Soyadınız:
                            div(class="form-group").col-sm-10
                                input(type="text" id="surname" class="form-control" placeholder="Lütfen soyadınızı giriniz" name="surname" required)

                        .row
                            label(for="email").col-sm-2 Email:
                            div(class="form-group").col-sm-10
                                input(type="email" id="email" class="form-control" placeholder="example@email.com" name="email" required)

                        //- Kayıt olurken telefon numarası isteme..
                        //- .row
                        //-     label(for="phone").col-sm-2 Telefon:
                        //-     div(class="form-group").col-sm-1
                        //-         <input type="text" readonly class="form-control-plaintext" name="phoneNumber1" id="phone" value="(0)">
                            
                        //-     div(class="form-group").col-sm-2
                        //-         input(type="text" id="phone" class="form-control" placeholder="543" maxlength="3" name="phoneNumber2" required value="")
                            
                        //-     div(class="form-group").col-sm-7
                        //-         input(type="text" id="phone" class="form-control" placeholder="9876543" maxlength="7" name="phoneNumber3" required value="")

                        .row
                            label(for="password").col-sm-2 Parola:
                            div(class="form-group").col-sm-10
                                input(type="password" id="password" class="form-control" placeholder="Hesap güvenliği için güçlü bir parola seçiniz" name="password" required)

                        .row.form-check.mt-2
                            div.col-sm-12
                                input(type="checkbox" class="form-check-input" id="registerCheck")
                            
                                label(class="form-check-label" for="registerCheck")
                                    | Üye ol'a basarak 
                                    a(href="/" target="_blank") Üyelik Koşulları
                                    |'nı ve  
                                    a(href="/" target="_blank") Kişisel Verilerin Korunması Metni
                                    |'ni kabul ediyorum.

                input(type="submit" class="btnSubmit" value="Üye Ol" id="registerButton" disabled).mt-3
    script(src="/js/language.js")
block script
    script(src="/js/register.js")